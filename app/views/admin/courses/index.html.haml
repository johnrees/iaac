.row
  .columns.large-12
    = title "Courses"

    = link_to "add course", new_admin_course_path, class: 'button'

    %table.table.table-striped
      %thead
        %tr
          %th= sort_link @q, :name
      %tbody
        - @courses.each do |course|
          %tr
            %td= link_to course, admin_course_path(course)
