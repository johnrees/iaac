.row
  .columns.large-12
    = title "Update Settings"

    = simple_form_for @user, html: { role: 'form' } do |f|
      %fieldset
        %legend Your Details
        = f.input :first_name
        = f.input :last_name
        = f.input :public_email
        = f.input :private_email
        = f.input :country_code, label: 'Country'
      = f.submit "Update details", class: 'button'
